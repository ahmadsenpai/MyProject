<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.hofipulsa.myproject.DepositActivity">

     <TextView
        android:id="@+id/deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deposit"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/valueDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/deposit" />
    <Button
        android:id="@+id/addDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add More"
        android:textColor="@color/white"
        android:background="@drawable/red_sunset"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/valueDeposit" />
    <Button
        android:id="@+id/minDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrease"
        android:textColor="@color/white"
        android:background="@drawable/deep_sea"
        app:layout_constraintTop_toBottomOf="@id/addDeposit"/>
    <Button
        android:id="@+id/btnDeposit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_shopping_cart"
        app:layout_constraintTop_toBottomOf="@id/minDeposit" />
    <TextView
        android:id="@+id/totalview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:paddingTop="30dp"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnDeposit"/>
    <TextView
        android:id="@+id/ttlDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25px"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/totalview"/>

</android.support.constraint.ConstraintLayout>
